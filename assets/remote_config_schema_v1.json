{
   "$schema":"http://json-schema.org/draft-07/schema",
   "$id": "TODO: https://example.com/product.schema.json",
   "title":"Remote Config",
   "type": "array",
   "minItems":1,
   "uniqueItems":true,
   "definitions":{
      "version":{
         "type":"string",
         "pattern":"^\\d+\\.\\d+\\.\\d+(?:[+-]\\S+)?$"
      },
      "versionConstraint":{
         "description":"Version range of the package or SDK to use",
         "oneOf":[
            {
               "$ref":"#/definitions/version"
            },
            {
               "type":"string",
               "examples":[
                  ">3.33.0 <4.0.0",
                  ">=1.0.0-pre.1 <=3.0.0"
               ],
               "pattern":"^(?:(?:>=|>|<=|<)\\d+\\.\\d+\\.\\d+(?:[+-]\\S+)?\\s*)+$"
            }
         ]
      },
      "promoCode":{
         "description":"A promotianal code",
         "type":"object",
         "required":[
            "code",
            "grantedSku"
         ],
         "properties":{
            "code":{
               "type":"string",
               "minLength":3
            },
            "grantedSku":{
               "description":"The SKU identifier in App / Play In App Purchase / Subscription that will be granted",
               "type":"string",
               "minLength":3
            },
            "grantedDuration":{
               "description":"A duration in seconds",
               "type":"integer"
            },
            "enabled":{
               "description":"If this code is still valid",
               "type":"boolean",
               "default":"true"
            },
            "expiresOn":{
               "examples":[
                  "2022-06-16 20:20:39"
               ],
               "type":"string",
               "pattern":"^(\\d{4}-(?:[01][0-2]|0\\d){1}-[0-3]\\d{1} [0-6]\\d{1}:[0-6]\\d{1}:[0-6]\\d{1})$"
            }
         }
      },
      "feature":{
         "type":"object",
         "required":[
            "id"
         ],
         "properties":{
            "id":{
               "type":"string",
               "minLength":3
            },
            "value":{
               "type":"string",
               "minLength":1
            }
         }
      },
      "variant":{
         "type":"object",
         "required":[
            "id",
            "features"
         ],
         "properties":{
            "id":{
               "type":"string",
               "minLength":3
            },
            "ratio":{
               "type":"integer",
               "minimum":1,
               "default":1
            },
            "features":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/feature"
               },
               "minItems":1,
               "uniqueItems":true
            }
         }
      },
      "experiment":{
         "type":"object",
         "required":[
            "id",
            "variants",
            "size"
         ],
         "properties":{
            "id":{
               "type":"string",
               "minLength":3
            },
            "enabled":{
               "description":"If this experiment is still valid",
               "type":"boolean",
               "default":"true"
            },
            "exclusive":{
               "type":"boolean",
               "default":"true"
            },
            "size":{
               "type":"number",
               "minimum":0,
               "maximum":1
            },
            "variants":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/variant"
               },
               "minItems":1,
               "uniqueItems":true
            }
         }
      }
   },
   "items":{
      "description":"A static remote configuration for client applications.",
      "type":"object",
      "required":[
         "appVersion"
      ],
      "properties":{
         "appVersion":{
            "$ref":"#/definitions/versionConstraint"
         },
         "promoCodes":{
            "description":"Promotianal Codes to enable some functionality",
            "type":"array",
            "items":{
               "$ref":"#/definitions/promoCode"
            },
            "minItems":1,
            "uniqueItems":true
         },
         "features":{
            "type":"array",
            "items":{
               "$ref":"#/definitions/feature"
            },
            "minItems":1,
            "uniqueItems":true
         },
         "experiments":{
            "type":"array",
            "items":{
               "$ref":"#/definitions/experiment"
            },
            "minItems":1,
            "uniqueItems":true
         }
      }
   }
}
